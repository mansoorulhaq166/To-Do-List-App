<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_margin="10dp"
    android:background="@color/light_white"
    android:padding="5dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/finish_tasks"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:button="@drawable/checkbox_selector" />

        <LinearLayout
            android:id="@+id/single_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/finish_tasks"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/task_options"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To do Text title"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/to_do_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="This is dicreption of text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/last_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="24/20"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/task_options"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/menu_open" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>